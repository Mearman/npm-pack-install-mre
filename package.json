{
  "devDependencies": {
    "wireit": "^0.14.4"
  },
  "main": "index.js",
  "name": "@google-labs/breadboard-cli",
  "scripts": {
    "npm:pack:install": "npm install -g $(npm pack)",
    "npm:test:pack": "npm run npm:pack:install && (cd ~ && npx $PACKAGE_NAME --help)",
    "wireit:pack:install": "wireit",
    "wireit:test:pack": "wireit"
  },
  "version": "1.0.0",
  "wireit": {
    "wireit:pack:install": {
      "command": "npm install -g $(npm pack)"
    },
    "wireit:test:pack": {
      "command": "(cd ~ && npx $PACKAGE_NAME --help)",
      "dependencies": [
        "wireit:pack:install"
      ]
    }
  }
}
